{
    "version": "1.0.11",
    "author": "igorlogius",
    "description": "display url as qr code for easy sharing between devices with qrcode scanner",
    "manifest_version": 2,
    "name": "addr2qr",
    "developer": {
	"name": "igorlogius",
	"url": "https://github.com/igorlogius"
    },
    "homepage_url": "https://github.com/igorlogius/addr2qr",
    "permissions": [
	    "activeTab"
    ],
    "page_action": {
	    "show_matches": ["<all_urls>"],
	    "browser_style": true, 
	    "default_icon": "icon.png",
	    "default_popup": "popup.html"
    }
}
